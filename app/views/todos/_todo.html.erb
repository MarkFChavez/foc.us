<div class="#{dom_id(todo)} max-w-md mb-4 float-left border-t-2 border-r-2 border-b-2 border-black p-4 bg-teal-dark text-yellow-lightest">
  <div>
    <span class="uppercase custom-font text-sm font-bold leading-loose">
      <%= todo.description %>
    </span>
  </div>

  <div class="mt-3 ml-5">
    <% todo.action_items.each do |item| %>
      <div class="ml-4 mb-2">
        <span class="text-xl mr-2">
          <% if item.done? %>
            &#10003;
          <% else %>
            x
          <% end %>
        </span>
        <span class="custom-font text-xs"> <%= item.description %> </span>
      </div>
    <% end %>
  </div>
</div>
<div class="clearfix"></div>
