<% if todos.any? %>
  <% todos.each do |todo| %>
    <div class="#{dom_id(todo)}">
      <span> <%= todo.description %> </span>
      <div style="margin-left: 10px">
        <% todo.action_items.each do |item| %>
          <div>
            <%= check_box_tag :done, item.done, item.done %>
            <%= item.description %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div> No todos </div>
<% end %>