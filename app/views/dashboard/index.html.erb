<div class="overflow-auto w-full bg-grey-light border-r-2 border-black">
  <div class="md:float-right bg-black text-white p-3">
    <span class="uppercase text-xl custom-font">
      <%= link_to "+", new_note_path, class: "text-white no-underline hover:underline" %>
      <span class="underline">notes</span>
    </span>
  </div>
  <div class="clearfix"></div>

  <div class="mt-4 pl-2">
    <% if @notes.any? %>
      <%= render @notes %>
    <% else %>
      <div class="text-center">
        <span class="custom-font"> NOTHING FOUND! </span>
      </div>
    <% end %>
  </div>
</div>

<div class="overflow-auto w-full bg-red-light border-l-2 border-black">
  <div class="md:float-left bg-black text-white p-3">
    <span class="uppercase text-xl custom-font">
      <span class="underline">todos</span>
      <%= link_to "+", new_todo_path, class: "text-white no-underline hover:underline" %>
    </span>
  </div>
  <div class="clearfix"></div>

  <div class="mt-4 pr-2">
    <% if @todos.any? %>
      <%= render @todos %>
    <% else %>
      <div class="text-center">
        <span class="custom-font"> NOTHING FOUND! </span>
      </div>
    <% end %>
  </div>
</div>
