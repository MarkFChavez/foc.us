<div class="#{dom_id(note)} max-w-md mb-4 float-right border-t-2 border-l-2 border-b-2 border-black p-4 bg-red-dark text-white">
  <div>
    <span class="custom-font text-sm tracking-wide leading-loose">
      <%= note.description %>
    </span>
  </div>

  <div class="mt-2 float-right">
    <small class="text-sm font-semi-bold italic">
      <%= format_date(note.created_at) %>
    </small>
  </div>
</div>

<div class="clearfix"></div>