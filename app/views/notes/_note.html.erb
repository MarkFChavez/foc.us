<div class="#{dom_id(note)} max-w-md mb-4 float-right border-t-2 border-l-2 border-b-2 border-black p-4 bg-yellow-dark">
  <div>
    <span class="custom-font text-sm leading-loose">
      <%= note.description %>
    </span>
  </div>

  <div class="mt-2 float-right">
    <div class="text-right">
      <small class="custom-font text-xs">
        &#128467;
        <%= format_date(note.created_at) %>
      </small>
    </div>
    <% if note.categories.any? %>
      <div class="flex flex-row-reverse mt-2">
        <% note.categories.each do |category| %>
          <small style="font-size: 10px" class="uppercase font-bold bg-purple-dark text-white p-2 self-l-spacing-wide custom-font mr-2"> <%= category.title %> </small>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="clearfix"></div>

  <div class="flex mt-4 float-right">
    <%= link_to "edit", edit_note_path(note), class: "mr-2 text-blue-darker text-xs custom-font" %>
    <%= link_to "remove", note_path(note), method: :delete, class: "text-red-dark text-xs custom-font", data: { confirm: "Is this not important anymore?" } %>
  </div>
  <div class="clearfix"></div>
</div>

<div class="clearfix"></div>
