<div class="sm:w-full md:w-1/3 mx-auto px-2 py-8">
  <div>
    <div class="text-center">
      <p class="text-3xl uppercase custom-font text-white"> gtd login </h2>
      <div class="mt-2">
        <small class="uppercase custom-font text-white">
          developed by
          <%= link_to "mark chavez", "https://markjoelchavez.com", class: "text-white", target: "_blank" %>
        </small>
      </div>
    </div>

    <div class="mt-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.label :email, class: "p-2 text-white bg-black custom-font uppercase text-xs" %>
        <div class="mb-4">
          <%= f.email_field :email, placeholder: "me@focus.net", autofocus: true, autocomplete: "email", class: "w-full px-2 py-4 custom-font border-4 border-black" %>
        </div>

        <%= f.label :password, class: "p-2 text-white bg-black custom-font uppercase text-xs" %>
        <div>
          <%= f.password_field :password, placeholder: "your passw0rd", autocomplete: "off", class: "w-full px-2 py-4 custom-font border-4 border-black" %>
        </div>

        <div class="actions mt-4 text-center">
          <%= f.submit "enter", class: "cursor-pointer uppercase custom-font p-4 text-white bg-black" %>

          <div class="mt-4">
            <%= link_to "Come say hi and I'll give you access!", "mailto:mjfchavez@gmail.com", class: "custom-font underline text-sm text-white" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
